<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <%= link_to '', user, class: 'link' %>
        <div class="media-left">
            <img src="<%= gravatar_url(user, size: 55) %>" alt="" class="img-circle" style="padding-bottom:5px;">
        </div>
        <div class="media-body">
          <div class="user media-heading">
            <h4>
              <%= user.name %>
              <a class="follow btn btn-info ">フォローする</a>
            </h4>
          </div>
          プロフィール文を表示予定
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
