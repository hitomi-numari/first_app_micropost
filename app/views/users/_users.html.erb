<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <%= link_to '', user, class: 'link' %>
        <div class="media-left">
          <img src="<%= gravatar_url(user, size: 55) %>" alt="" class="img-circle" style="padding-bottom:5px">
        </div>
        <div class="media-body">
          <div class="user media-heading">
            <h4>
              <%= user.name %>
            </h4>
          </div>
          <%= user.description %>
          <%= render 'relationships/follow_or_unfollow_btn', user: user %>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="text-center">
    <%= paginate users %>
  </div>
<% end %>
